<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.ntu.e.fang0074.ipet.RateComment">

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_above="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:src="@drawable/logo3" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rate_msg"
        android:layout_alignStart="@+id/rating_reason"
        android:layout_marginBottom="12dp"
        android:progressTint="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/rate_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rating_reason"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:text="Rate the vet clinic"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/rating_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit_rating"
        android:layout_alignStart="@+id/rate_msg"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:hint="Please provide your reasons here."
        android:inputType="textMultiLine"
        android:textSize="20dp" />

    <Button
        android:id="@+id/submit_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="106dp"
        android:background="@color/colorPrimary"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="16dp" />

</RelativeLayout>
