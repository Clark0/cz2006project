<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:padding="2dp"
    android:background="@color/white"
    android:layout_margin="0dp"
    app:cardUseCompatPadding="false"

    android:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/comment_user_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:paddingTop="0dp"
            android:text="User Name"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorDarkerGray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/comment_user_name"
            android:layout_below="@+id/comment_user_name"
            android:layout_marginTop="9dp"
            android:paddingTop="0dp"
            android:text="User comments."
            android:textSize="18sp" />

        <TextView
            android:id="@+id/single_user_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/comment_content"
            android:layout_alignTop="@+id/comment_user_name"
            android:text="5.0/5.0"
            android:textColor="@color/colorPrimary"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/single_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/comment_content"
            android:layout_below="@+id/comment_content"
            android:layout_marginTop="14dp"
            android:text="Date"
            android:textSize="18dp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>